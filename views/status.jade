extends layout

block content
  #wrapper
    #header
        #logo
        #facebook
            include ./includes/feedback.jade
        #title
            p Status
    #content

        #dropdown
            p Change search
            select(name="selectsearch" class="searchdrop")
                for result in searchorders
                    option(value="#{result.order_id}") #{result.val}

        #stats
            input(type='submit', id="reload" class="submit_btn", value='load data')
