        #matchlist

    #footer
        #arrow_wrapper
            a(href="/login")
                .arrow
                    p login
            a(href="/filters")
                .arrow
                    p filters
            a(href="/pickuplines")
                .arrow
                    p pick up
            .arrow_active
                p match

    #panel