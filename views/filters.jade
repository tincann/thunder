extends layout

block content
  #wrapper
    #header
        #logo
        #facebook
            include ./includes/feedback.jade
        #title
            p Wanted
    #content.filters

        form(action='/filters/', method='post', id="filterform")

            #gender

                input(type="radio", id="radio1", name="gender", value="m", checked=gender=="m")
                label(for="radio1") Man

                input(type="radio", id="radio2", name="gender", value="v", checked=gender=="v")
                label(for="radio2") Vrouw

                input(type="radio", id="radio3", name="gender", value="b", checked=gender=="b")
                label(for="radio3") Bi

            #age
            input(type="number", id="age_min", name="age_min" value="#{age_min || '25'}")
            input(type="number", id="age_max", name="age_max" value="#{age_max || '35'}")

            #location.ui-widget
                input(id="location_input", type="text" name="city" value="#{city || ''}")
                label(for="location_input") Location
                input(type="hidden", id="location_lat", name="location_lat", value="#{location_lat || ''}")
                input(type="hidden", id="location_lng", name="location_lng", value="#{location_lng || ''}")

            #range
            input(type="number", id="rangekm", name="range" value="#{range || '50'}")

            #submit.filters
                input(type="hidden", name="searchorder_id", value="#{searchorder_id || ''}")
                input(type='submit', name='next', value='Next')

    #footer
